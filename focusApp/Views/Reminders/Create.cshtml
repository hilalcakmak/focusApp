@model focusApp.Models.Reminder
@{
    ViewData["Title"] = Model.ReminderId == 0 ? "Hatırlatıcı Ekle" : "Hatırlatıcı Düzenle";
}
@section Styles {
    <style>
        .form-card {
            max-width: 420px;
            margin: 0 auto;
            border-radius: 16px;
            box-shadow: 0 2px 16px #0001;
            border: none;
            padding: 2rem;
        }
    </style>
}
<div class="card form-card">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <form asp-action="@(Model.ReminderId == 0 ? "Create" : "Edit")" method="post">
        @if (Model.ReminderId != 0)
        {<input type="hidden" asp-for="ReminderId" />}
        <div class="mb-3">
            <label asp-for="TaskId" class="form-label">Görev</label>
            <select asp-for="TaskId" class="form-select" asp-items="ViewBag.Tasks">
                <option value="">Görev Seçiniz</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="RemindAt" class="form-label">Hatırlatma Zamanı</label>
            <input asp-for="RemindAt" type="datetime-local" class="form-control" required />
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsSent" class="form-check-input" type="checkbox" id="IsSent" />
            <label class="form-check-label" for="IsSent">Gönderildi olarak işaretle</label>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">İptal</a>
    </form>
</div>
