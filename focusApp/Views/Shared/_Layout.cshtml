<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FocusPlanner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #f5f6fa;
            font-family: 'Nunito', sans-serif;
        }

        .navbar {
            border-radius: 0 0 24px 24px;
        }

        .nav-link.active {
            color: #e63946 !important;
            font-weight: bold;
        }

        .rounded-avatar {
            border-radius: 50%;
            width: 38px;
            height: 38px;
            object-fit: cover;
        }

        .card {
            border-radius: 18px;
            box-shadow: 0 4px 24px #0001;
            border: none;
        }
    </style>
    @RenderSection("Styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4 mb-4">
        <a class="navbar-brand fs-4 fw-bold" href="/">FocusPlanner</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto gap-3">
                <li class="nav-item"><a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks") ? "active" : "")" href="/Tasks">Görevler</a></li>
                <li class="nav-item"><a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "PomodoroSessions") ? "active" : "")" href="/PomodoroSessions">Pomodoro</a></li>
                <li class="nav-item"><a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Projects") ? "active" : "")" href="/Projects">Projeler</a></li>
                <li class="nav-item"><a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Reminders") ? "active" : "")" href="/Reminders">Hatırlatıcılar</a></li>
                <li class="nav-item"><a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Tags") ? "active" : "")" href="/Tags">Etiketler</a></li>
            </ul>
            <img src="~/img/user.jpg" class="rounded-avatar ms-4" alt="Kullanıcı" />
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
